# -*- mode: editorconfig; -*-
# vi: set ft=editorconfig:

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.cs]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.sln]
indent_style = tab
